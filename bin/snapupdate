version="0.0.5-alpha4"
if [ "$1" == "--version" ]; then
  /bin/echo -e "\n$version\n"
  exit 0
fi
#check for /etc/mrai/snapd.flag
if [ -f /etc/mrai/snapd.flag ]; then
  #force snaps to update
  /bin/echo -e "\nForce Updating Snaps. Please Wait . . .\n"
  /usr/bin/snap refresh
  echo ""
else
  /bin/echo -e "\nWe're sorry. It appears snapd is not installed. Please run { mrai -ia snapd } to install it.\n"
  exit 1
fi
